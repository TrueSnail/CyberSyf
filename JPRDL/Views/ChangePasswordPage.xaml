<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JPRDL.Views.ChangePasswordPage"
             Title="Zmiana hasła">
    
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            
            <Label Text="Zmiana hasła" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            
            <Border StrokeThickness="1"
                    Stroke="LightGray"
                    StrokeShape="RoundRectangle 10"
                    Padding="20"
                    Background="White">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="Stare hasło:" 
                           FontSize="16"
                           TextColor="Black"/>
                    <Entry x:Name="OldPasswordEntry" 
                           Placeholder="Wpisz stare hasło" 
                           IsPassword="True"
                           FontSize="16"
                           TextColor="Black"
                           PlaceholderColor="Gray"/>
                    
                    <Label Text="Nowe hasło:" 
                           FontSize="16"
                           TextColor="Black"
                           Margin="0,10,0,0"/>
                    <Entry x:Name="NewPasswordEntry" 
                           Placeholder="Wpisz nowe hasło" 
                           IsPassword="True"
                           FontSize="16"
                           TextColor="Black"
                           PlaceholderColor="Gray"/>
                    
                    <Label Text="Powtórz nowe hasło:" 
                           FontSize="16"
                           TextColor="Black"
                           Margin="0,10,0,0"/>
                    <Entry x:Name="ConfirmPasswordEntry" 
                           Placeholder="Powtórz nowe hasło" 
                           IsPassword="True"
                           FontSize="16"
                           TextColor="Black"
                           PlaceholderColor="Gray"/>
                    
                    <Label x:Name="RequirementsLabel" 
                           TextColor="Gray" 
                           FontSize="12"
                           Margin="0,10,0,0"/>
                    
                    <Label x:Name="ErrorLabel" 
                           TextColor="Red" 
                           FontSize="14"
                           IsVisible="False"
                           Margin="0,10,0,0"/>
                    
                    <Button Text="Zmień hasło" 
                            Clicked="OnChangePasswordClicked"
                            BackgroundColor="#0078D4"
                            TextColor="White"
                            FontSize="18"
                            Margin="0,20,0,0"
                            HeightRequest="50"/>
                    
                    <Button Text="Anuluj" 
                            Clicked="OnCancelClicked"
                            BackgroundColor="#6C757D"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="45"/>
                    
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
