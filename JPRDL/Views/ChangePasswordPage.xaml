<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JPRDL.Views.ChangePasswordPage"
             Title="Zmiana hasła">
    
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            
            <Label x:Name="InfoLabel" 
                   FontSize="16" 
                   HorizontalOptions="Center"
                   TextColor="Orange"
                   FontAttributes="Bold"/>
            
            <Frame BorderColor="LightGray" Padding="20" CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="Stare hasło:" FontSize="16"/>
                    <Entry x:Name="OldPasswordEntry" 
                           IsPassword="True"
                           Placeholder="Wpisz obecne hasło"
                           FontSize="16"/>
                    
                    <Label Text="Nowe hasło:" FontSize="16" Margin="0,10,0,0"/>
                    <Entry x:Name="NewPasswordEntry" 
                           IsPassword="True"
                           Placeholder="Wpisz nowe hasło"
                           FontSize="16"/>
                    
                    <Label Text="Powtórz nowe hasło:" FontSize="16" Margin="0,10,0,0"/>
                    <Entry x:Name="ConfirmPasswordEntry" 
                           IsPassword="True"
                           Placeholder="Powtórz nowe hasło"
                           FontSize="16"/>
                    
                </VerticalStackLayout>
            </Frame>
            
            <Frame BorderColor="Orange" 
                   BackgroundColor="#FFF3CD" 
                   Padding="15" 
                   CornerRadius="10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Wymagania dla hasła:" 
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="Black"/>
                    <Label x:Name="RequirementsLabel" 
                           FontSize="12" 
                           TextColor="#856404"/>
                </VerticalStackLayout>
            </Frame>
            
            <Label x:Name="ErrorLabel" 
                   TextColor="Red" 
                   FontSize="14"
                   IsVisible="False"/>
            
            <Button Text="Zmień hasło" 
                    Clicked="OnChangePasswordClicked"
                    BackgroundColor="#28A745"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"/>
            
            <Button x:Name="CancelButton"
                    Text="Anuluj" 
                    Clicked="OnCancelClicked"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="16"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
