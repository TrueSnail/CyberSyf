@using E_Book_Store.ViewModels.MyEBooks
@model IEnumerable<MyEBooksItemViewModel>

@{
    ViewData["Title"] = "My E-Books";
}

<div style="max-width: 1200px; margin: 0 auto; padding: 2rem;">
    <!-- Page Title -->
    <h1 style="font-size: 3rem; font-weight: bold; text-align: center; color: #4c1d95; margin-bottom: 1rem;">My E-Books</h1>

    <!-- Intro Section -->
    <div style="margin-bottom: 2rem; text-align: center;">
        <p style="font-size: 1.125rem; color: #4b5563; max-width: 800px; margin: 0 auto;">
            Here is a personalized list of e-books available to you. You can read each title directly using the action buttons below.
        </p>
    </div>

    <!-- Table Section -->
    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; background-color: white; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
            <thead style="background-color: #ede9fe; color: #5b21b6; text-transform: uppercase; font-size: 0.875rem;">
                <tr>
                    <th style="padding: 1rem; text-align: center;">Author</th>
                    <th style="padding: 1rem; text-align: center;">Title</th>
                    <th style="padding: 1rem; text-align: center;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-top: 1px solid #e5e7eb;" onmouseover="this.style.backgroundColor='#f3e8ff'" onmouseout="this.style.backgroundColor='white'">
                        <td style="padding: 1rem; text-align: center;">@item.Author</td>
                        <td style="padding: 1rem; text-align: center;">@item.Title</td>
                        <td style="padding: 1rem; text-align: center;">
                            <a asp-action="Read" asp-route-id="@item.Id" style="background-color: #8b5cf6; color: white; padding: 0.4rem 0.8rem; border-radius: 0.375rem; text-decoration: none; font-size: 0.875rem;" onmouseover="this.style.backgroundColor='#7c3aed'" onmouseout="this.style.backgroundColor='#8b5cf6'">Read</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
